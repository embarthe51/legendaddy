<h2 class="text-white mt-4">Identifiez vous</h2>
<section class="legend-form-container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :pseudo, required: true, placeholder: "Bob_du_51" %>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, placeholder: "bob@liverpool.com" %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, placeholder: "*********" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%# <% link_to 'availabilities', availabilities_path %>
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
</section>

<%= render "devise/shared/links" %>
