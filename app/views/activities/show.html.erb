<div class="container">
  <article class="box-description">
    <% if @activity.photos.any? %>
      <%= cl_image_tag(@activity.photos.first.key, width: 200, height: 200, crop: :thumb, gravity: :face) %>
    <% else %>
      <%= image_tag 'unicorn.jpg', width: 350, height: 350 %>
    <% end %>
    <h2><%=@activity.title %></h2>
    <h6><strong>Address:</strong> <%= @activity.address%></h6>
    <p><strong>Url:</strong> <%= @activity.url %></p>
    <p><strong>Description:</strong> <%= @activity.description %></p>
    <p> <%= sanitize @activity.formated_open_times %></p>
  </article>

  <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
