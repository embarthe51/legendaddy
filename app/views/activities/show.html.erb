<div class="contenu">
<article class="box-description">
  <div class="image-clou">
    <% if @activity.photos.any? %>
      <%= cl_image_tag(@activity.photos.first.key, width: 420, height: 300, crop: :thumb, gravity: :face) %>
    <% else %>
      <%= image_tag 'papa.jpeg', width: 420, height: 300 %>
    <% end %>
  </div>
    <h2 class="secondary_title"><%= @activity.title %></h2>
  <div class="info-card">
    <h6 class="font-style"><i class="fa-solid fa-location-dot"></i> : <%= @activity.address%></h6>
    <br>
    <p><i class="fa-solid fa-link"></i> : <%= @activity.url %></p>
    <% if @activity.price_cents %>
      <p><i class="fa-solid fa-money-check"></i> : <%= @activity.price_cents.to_i %>â‚¬</p>
    <% end %>

    <p><i class="fa-solid fa-circle-info"></i> : <%= @activity.description %></p>
      <div>
        <p><%= sanitize @activity.formated_open_times %></p>
      </div>
      <br>
    <input class="bouton-bleu" type="button" value="Je reserve">
  </div>
    <div class="map" style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </article>
</div>
